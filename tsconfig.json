{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "moduleResolution": "Node",
        "paths": {
            "~*": [
                "./*"
            ],
            "jszip": ["node_modules/jszip/dist/jszip.min.js"],
        },
        "strict": true,
        "target": "ES2020"
    },
    "include": [
        "src/**/*"
    ]
}